class Solution {
    public int maxChunksToSorted(int[] arr) {
        int n=arr.length;
        int count=0;
        int MaxTill=0;
        for(int i=0;i<n;i++){
            MaxTill=Math.max(MaxTill,arr[i]);
            if(MaxTill==i){
                count++;
            }
        }

        return count;
    }
