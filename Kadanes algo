public class Solution {
    public int maxSubArray(int[] nums) {
        int n = nums.length;
        int sum = 0;
        int ans = Integer.MIN_VALUE; // Stores the maximum sum so far

        for (int i = 0; i < n; i++) {
            // If sum is positive, keep adding current element
            if (sum >= 0) {
                sum += nums[i];
            } 
            // If sum is negative, restart from current element
            else {
                sum = nums[i];
            }
            // Update the answer if we found a bigger sum
            ans = Math.max(ans, sum);
        }

        return ans; // Final maximum subarray sum
    }

    public static void main(String[] args) {
        Solution sol = new Solution();
        int[] nums = {-2, 1, -3, 4, -1, 2, 1, -5, 4};
        System.out.println("Maximum Subarray Sum: " + sol.maxSubArray(nums));
    }
}
